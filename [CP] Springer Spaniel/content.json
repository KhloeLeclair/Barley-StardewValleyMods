{
  "Format": "2.0.0",
  "ConfigSchema": {
    "Add or Replace": {
      "AllowValues": "Add as New Breed, Replace Dog 0, Replace Dog 1, Replace Dog 2, Replace Dog 3, Replace Dog 4",
      "Default": "Add as New Breed",
      "Description": "Whether to add the Spaniel as a new breed or replace one of the existing breeds."
    },
    "Adoption Price": {
      "Default": "40000",
      "Description": "Must be a non-negative integer value."
    }
  },
  "Changes": [
    // new breed
    {
      "Action": "Load",
      "Target": "Mods/{{ModId}}/Spaniel",
      "FromFile": "Spaniel.png",
      "When": {
        "Add or Replace": "Add as New Breed"
      }
    },
    {
      "Action": "EditData",
      "Target": "Data/Pets",
      "TargetField": [ "Dog", "Breeds" ],
      "Entries": {
        "{{ModId}}/Spaniel": {
          "Id": "{{ModId}}/Spaniel",
          "Texture": "Mods/{{ModId}}/Spaniel",
          "IconTexture": "Mods/{{ModId}}/SpanielIcon",
          "IconSourceRect": {
            "X": 0,
            "Y": 0,
            "Width": 16,
            "Height": 16
          },
          "CanBeChosenAtStart": true,
          "CanBeAdoptedFromMarnie": true,
          "AdoptionPrice": "{{Adoption Price}}",
          "BarkOverride": null,
          "VoicePitch": 1.0
        }
      },
      "When": {
        "Add or Replace": "Add as New Breed"
      }
    },

    // dog0
